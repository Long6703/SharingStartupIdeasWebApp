                        {
                            <a class="nav-link dropdown-toggle nav-user mr-0" data-toggle="dropdown" href="#" role="button"
                               aria-haspopup="false" aria-expanded="false">
                                <img src="~/assets/images/users/avatar-1.jpg" alt="user-image" class="rounded-circle">
                                <span class="pro-user-name ml-1">
                                    @userViewModel.Displayname <i class="mdi mdi-chevron-down"></i>
                                </span>
                            </a>

                        }
                        else
                        {
                            <button style="margin-top: 20px"><i class="bi bi-box-arrow-in-left"></i>Logout</button>
                        }
                    }
                    
                    <div class="dropdown-menu dropdown-menu-right profile-dropdown ">
                        <!-- item-->
                        @{
                            if (userViewModel != null && !string.IsNullOrEmpty(userViewModel.Displayname))
                            {
                                <a href="javascript:void(0);" class="dropdown-item notify-item">
                                    <i class="mdi mdi-account-outline"></i>
                                    <span>Welcome @userViewModel.Displayname !</span>
                                </a>

                            }
                            else
                            {
                                <ul class="menu_right">
                                    <li>
                                        <a class="menu_order common_btn" asp-page="Login">
                                            login
                                        </a>
                                    </li>
                                    <li>
                                        <a class="menu_order common_btn" asp-page="Register">
                                            Register
                                        </a>
                                    </li>
                                </ul>
                            }
                        }
                        
                        

                        <!-- item-->
                        <a href="javascript:void(0);" class="dropdown-item notify-item">
                            <i class="mdi mdi-account-outline"></i>
                            <span>Profile</span>
                        </a>

                        <!-- item-->

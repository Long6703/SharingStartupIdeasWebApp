@page
@model SSI.Pages.Admin.AdminModel
@{
    Layout = "_LayoutAdmin";
}

<link href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css" rel="stylesheet"/>
<div class="container-fluid">
    <!-- Header -->
    <div class="row">
        <div class="col-12">
            <div style="display: flex; justify-content: space-between; align-items: center;">
                <h4 class="header-title mb-3">User List</h4>
            </div>
        </div>
    </div>

    <!-- Buttons and Table -->
    <div class="row">
        <div class="col-12">
            <!-- Filter Buttons and Search Bar -->
            <div class="d-flex justify-content-between mb-3">
                <form method="post" class="d-flex" id="filterButtons">
                    <button class="btn btn-icon btn-warning mx-1" value="Total" name="nAc"><i>Total</i></button>
                    <button class="btn btn-icon btn-warning mx-1" value="Investor" name="nAc"><i>Investor</i></button>
                    <button class="btn btn-icon btn-warning mx-1" value="Founder" name="nAc"><i>Founder</i></button>
                </form>
                <div id="datatable-search-container"></div>
            </div>

            <!-- DataTable -->
            <div class="mt-5">
                <table id="datatable-buttons" class="table table-striped table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Role</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var u in Model.Users)
                        {
                            <tr>
                                <td class="row-number">@u.UserId</td>
                                <td>@u.Displayname</td>
                                <td>@u.Email</td>
                                <td>@u.Role</td>
                                <td>@u.Status</td>
                                <td>
                                    <form method="post">
                                        <input type="hidden" name="id" value="@u.UserId" />
                                            <button class="btn btn-icon btn-warning" type="submit" name="action" value="View">
                                                <i class="fas fa-eye"></i>
                                            </button>
                                        <button type="submit" class="btn btn-icon btn-danger" name="action" value="Lock" @(u.Status == "inactive" ? "disabled" : "")><i class="fas fa-times"></i></button>
                                        <button type="submit" class="btn btn-icon btn-primary" name="action" value="UnLock" @(u.Status == "active" ? "disabled" : "")><i class="far fa-heart"></i></button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- DataTables and jQuery Scripts -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
<script>
    $(document).ready(function () {
        $.fn.dataTable.ext.errMode = 'none';

        // Initialize DataTable
        if (!$.fn.DataTable.isDataTable('#datatable-buttons')) {
            var table = $('#datatable-buttons').DataTable({
                "paging": true,
                "pageLength": 5,
                "lengthChange": false,
                "ordering": true,
                "info": true,
                "searching": true
            });

            // Move the search bar to a custom container
            $('#datatable-search-container').html($('#datatable-buttons_filter'));
        }
    });
</script>

<!-- Custom CSS -->
<style>
    /* Align buttons to the left and search bar to the right */
    .d-flex.justify-content-between {
        align-items: center;
    }

    #filterButtons {
        margin-right: auto;
    }

        #filterButtons .btn {
            margin-right: 5px;
        }
</style>
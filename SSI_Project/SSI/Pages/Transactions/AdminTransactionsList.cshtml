@page
@model SSI.Pages.Transactions.AdminTransactionsListModel
@{
    Layout = "_LayoutAdmin";
}
<link href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css" rel="stylesheet">

<div class="container-fluid">

    <!-- start  -->
    <div class="row">
        <div class="col-12">
            <div>
                <h4 class="header-title mb-3">Transactions List</h4>
            </div>
        </div>
    </div>
    <!-- end row -->

    <div class="row">
        <div class="col-12">
            <div class="mt-5">
                <table id="datatable-buttons"
                       class="table table-striped table-bordered dt-responsive nowrap"
                       style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                    <thead>
                        <tr>
                            <th>Transaction ID</th>
                            <th>User</th>
                            <th>Title Idea</th>
                            <th>Amount</th>
                            <th>Date</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var t in Model.Transactions)
                        {
                            <tr>
                                <td>@t.TransactionCode</td>
                                <td>@t.InvestmentRequest.User.Displayname</td>
                                <td>@t.InvestmentRequest.Idea.Title</td>
                                <td>@t.Amount</td>
                                <td>@t.CreatedAt</td>
                                <td>
                                    @t.Status
                                </td>
                                <td>
                                    <a href="">
                                        <button class="btn btn-icon btn-warning" type="submit" name="action" value="View">
                                            <i class="fas fa-eye"></i>
                                        </button>
                                    </a>
                                </td>
                            </tr>
                        }
                       
                        <!-- Continue for the remaining rows -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <!-- end row -->

</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
<script>
          $(document).ready(function() {
        $.fn.dataTable.ext.errMode = 'none';

        if (!$.fn.DataTable.isDataTable('#datatable-buttons')) {
            $('#datatable-buttons').DataTable({
                "paging": true,
                "pageLength": 5,
                "lengthChange": false,
                "ordering": true,
                "info": true,
                "searching": true
            });
        }
    });
</script>
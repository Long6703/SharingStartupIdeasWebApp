@page
@model SSI.Pages.PaymentCallBackModel
@{
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<!--==========================
        BREADCRUMB AREA START
    ===========================-->
<section class="breadcrumb_area" style="background: url(assetsClient/images/breadcrumb_bg.jpg);">
    <div class="container">
        <div class="row wow fadeInUp">
            <div class="col-12">
                <div class="breadcrumb_text">
                    <h1>payment</h1>
                    <ul>
                        <li><a href="#">Home </a></li>
                        <li><a href="#">payment</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>
<!--==========================
    BREADCRUMB AREA END
===========================-->
<!--==========================
    PAYMENT START
===========================-->
<section class="payment pt_120 xs_pt_100">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-6 col-lg-7 wow fadeInLeft">
                <div class="payment_area">
                    <h1>Payment</h1>
                    <p>Result: @Model.Result</p>
                </div>
            </div>
            <div class="col-xl-4 col-lg-5 wow fadeInRight">
                <div class="cart_summery">
                    <h3>Transaction Summary</h3>
                    <p><strong>Result:</strong> @Model.Result</p>

                    @if (Model.Result.Contains("thành công"))
                    {
                        <ul>
                            <li><strong>Amount:</strong> @Model.Amount</li>
                            <li><strong>Payment Method:</strong> @Model.PaymentMethod</li>
                            <li><strong>Transaction Date:</strong> @Model.TransactionDate</li>
                        </ul>
                    }
                    else
                    {
                        <p>Payment failed. Please try again.</p>
                    }
                </div>
            </div>
            <a href="/ManageRequestInvestor" class="btn btn-primary">Back to Home</a>
        </div>
    </div>
</section>

<div class="payment_modal">
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-body">
                    <div class="pay_modal_info">
                        <p>
                            Lorem, ipsum dolor sit amet consectetur adipisicing elit. Libero, tempora cum optio
                            cumque rerum dolor impedit exercitationem? Eveniet suscipit repellat, quae natus hic
                            assumenda.
                        </p>
                        <ul>
                            <li>Natus hic assumenda consequatur excepturi ducimu.</li>
                            <li>Cumque rerum dolor impedit exercitationem Eveniet.</li>
                            <li>Dolor sit amet consectetur adipisicing elit tempora cum </li>
                        </ul>
                        <form>
                            <input type="text" placeholder="Enteer Something">
                            <textarea rows="4" placeholder="Enter Something"></textarea>
                            <select class="select_js">
                                <option value="">Select Something</option>
                                <option value="">bangladesh</option>
                                <option value="">nepal</option>
                                <option value="">japan</option>
                                <option value="">korea</option>
                                <option value="">thailand</option>
                            </select>
                            <div class="payment_btn_area">
                                <button type="button" class="btn btn-danger common_btn"
                                        data-bs-dismiss="modal">
                                    Close
                                </button>
                                <button type="submit" class="btn btn-success common_btn">Submit</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!--==========================
    PAYMENT END
===========================-->

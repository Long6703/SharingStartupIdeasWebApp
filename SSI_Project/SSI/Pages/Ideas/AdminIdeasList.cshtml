@page
@model SSI.Pages.Ideas.AdminIdeasListModel
@{
    Layout = "_LauoutAdmin";
}

<link href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css" rel="stylesheet">

<div class="container-fluid">


    <div class="row">
        <div class="col-12">
            <div style="display: flex; justify-content: space-between; align-items: center;">
                <h4 class="header-title mb-3">Ideas List</h4>
                <a href="pages-information-details.html">
                    <button class="btn btn-icon btn-warning"><i class="fas fa-plus"></i></button>
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="mt-5">
                <table id="datatable-buttons"
                       class="table table-striped table-bordered dt-responsive nowrap"
                       style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Name</th>
                            <th>Title</th>
                            <th>Cattegory</th>
                            <th>Start date</th>
                            <th>Status</th>
                            <th></th>
                    </thead>

                    <tbody>
                        @foreach(var i in Model.Ideas)
                        {
                            <tr>
                                <td class="row-number">@i.PosterImg</td>
                                <td>@i.User.Displayname</td>
                                <td>@i.Title</td>
                                <td>@i.Category</td>
                                <td>@i.CreatedAt</td>
                                <td>@i.Status</td>
                                <td>
                                    <a href="pages-information-details.html">
                                        <button class="btn btn-icon btn-warning">
                                            <i class="fas fa-eye"></i>
                                        </button>
                                    </a>
                                    <button class="btn btn-icon btn-danger" onclick="lockAccount(this)">
                                        <i class="fas fa-times"></i>
                                    </button>
                                    <button class="btn btn-icon btn-primary"
                                            onclick="activateAccount(this)">
                                        <i class="far fa-heart"></i>
                                    </button>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <!-- end row -->

</div>


<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
<script>
          $(document).ready(function() {
        $.fn.dataTable.ext.errMode = 'none';

        if (!$.fn.DataTable.isDataTable('#datatable-buttons')) {
            $('#datatable-buttons').DataTable({
                "paging": true,
                "pageLength": 5,
                "lengthChange": false,
                "ordering": true,
                "info": true,
                "searching": true
            });
        }
    });
</script>

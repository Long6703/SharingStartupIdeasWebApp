@page
@model SSI.Pages.Ideas.AdminIdeasListModel
@{
    Layout = "_LayoutAdmin";
}


<link href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css" rel="stylesheet">

<div class="container-fluid">

    <!-- start  -->
    <div class="row">
        <div class="col-12">
            <div style="display: flex; justify-content: space-between; align-items: center;">
                <h4 class="header-title mb-3">Ideas List</h4>
                
            </div>
        </div>
    </div>
    <!-- end row -->

    <div class="row">
        <div class="col-12">
            <div class="mt-5">
                <table id="datatable-buttons"
                       class="table table-striped table-bordered dt-responsive nowrap"
                       style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Founder</th>
                            <th>Title</th>
                            <th>Category</th>
                            <th>Created At</th>
                            <th>Status</th> <!-- Moved the Age column header here -->
                            <th>Action</th> <!-- This is the new empty header for Status -->
                        </tr>
                    </thead>

                    <tbody>
                        @foreach(var idea in Model.Ideas)
                        {
                            <tr>
                                <td class="row-number">@idea.IdeaId</td>
                                <td>@idea.User?.Displayname</td>
                                <td>@idea.Title</td>
                                <td>@idea.Category.Name</td>
                                <td>@idea.CreatedAt</td>
                                <td>@idea.Status</td> <!-- Moved Age value here -->
                                <td>
                                    <form method="post">
                                        <input type="hidden" name="id" value="@idea.IdeaId" />
                                        <a href="">
                                            <button class="btn btn-icon btn-warning" type="submit" name="action" value="View">
                                                <i class="fas fa-eye"></i>
                                            </button>
                                        </a>

                                        <button class="btn btn-icon btn-danger" type="submit" name="action" value="Reject" @((idea.Status == "approved" || idea.Status == "rejected") ? "disabled" : "")>
                                            <i class="fas fa-times"></i>
                                        </button>
                                        <button class="btn btn-icon btn-primary" type="submit" name="action" value="Approve" @((idea.Status == "approved" || idea.Status == "rejected") ? "disabled" : "")>
                                            <i class="far fa-heart"></i>
                                        </button>
                                    </form>
                                    
                                </td> <!-- Added three buttons here -->
                            </tr>
                        }

                        <!-- Continue for the remaining rows -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <!-- end row -->

</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
<script>
          $(document).ready(function() {
        $.fn.dataTable.ext.errMode = 'none';

        if (!$.fn.DataTable.isDataTable('#datatable-buttons')) {
            $('#datatable-buttons').DataTable({
                "paging": true,
                "pageLength": 5,
                "lengthChange": false,
                "ordering": true,
                "info": true,
                "searching": true
            });
        }
    });
</script>
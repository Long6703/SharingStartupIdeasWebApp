<section class="chefs_3 mt_110 xs_mt_90">
    <div class="container">
        <div class="row wow fadeInLeft">
            <div class="col-xl-8">
                <div class="section_heading heading_left mb_25">
                    <h2>Some Prominent Investor</h2>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach(var topInvestor in Model.TopInvestors)
            {
                <div class="col-xl-3 col-sm-6 col-lg-4 wow fadeInUp">
                    <div class="single_chef_3">
                        <div class="single_chef_3_img">
                            <img src="@topInvestor.AvatarUrl" alt="Chef" class="img-fluid w-100">
                            <div class="social_icon">
                                <ul>
                                    <li><a class="facebook" href="@topInvestor.FacebookUrl"><i class="fab fa-facebook-f"></i></a></li>
                                    <li><a class="twitter" href="@topInvestor.TwitterUrl"><i class="fab fa-twitter"></i></a></li>
                                    <li><a class="linkedin" href="@topInvestor.LinkedinUrl"><i class="fab fa-linkedin-in"></i></a></li>
                                </ul>
                                <span><i class="far fa-share-alt"></i></span>
                            </div>
                        </div>
                        <div class="single_chef_text_3">
                            <a class="title" href="chefs_details.html">@topInvestor.Displayname</a>
                            <p>@topInvestor.Email</p>
                        </div>
                    </div>
                </div>
            }
           
        </div>
    </div>
</section>

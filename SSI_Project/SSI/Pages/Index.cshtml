<section class="blog pt_100 xs_pt_80">
    <div class="container">
        <div class="row wow fadeInUp">
            <div class="col-xl-8 m-auto">
                <div class="section_heading mb_25">
                    <h2>Lastest New Ideas</h2>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach(var newIdeas in Model.NewIdeas)
            {
                <div class="col-lg-4 col-sm-6 wow fadeInUp">
                    <div class="single_blog">
                        <div class="single_blog_img">
                            <img src="@newIdeas.PosterImg" alt="blog" class="img-fluid w-100">
                            <a class="category" href="#">@newIdeas.Category?.Name</a>
                        </div>
                        <div class="single_blog_text">
                            <ul>
                                <li>
                                    <span><img src="assetsClient/images/calendar.svg" alt="calendar" class="img-fluid"></span>
                                    @newIdeas.CreatedAt?.ToString("MM/dd/yyyy")
                                </li>
                                <li>BY @newIdeas.User?.Displayname</li>
                            </ul>
                            <a class="title" href="@Url.Page("IdeaDetails", new { id = newIdeas.IdeaId })">
                                @newIdeas.Title
                            </a>
                            <a class="read_btn" href="@Url.Page("IdeaDetails", new { id = newIdeas.IdeaId })">
                                Read More <i class="far fa-arrow-right"></i>
                            </a>
                        </div>
                    </div>
                </div>
            }
            

        </div>
    </div>
</section>
<!--==========================
    BLOG END
===========================-->


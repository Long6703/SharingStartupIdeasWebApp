<style>
    html, body {
        height: 100%;
        margin: 0;
        overflow: hidden;
    }

    .full-screen-section {
        height: 100vh;
        width: 100vw;
        display: flex;
        justify-content: center;
        align-items: center;
    }

</style>

<section class="sign_up sign_in full-screen-section">
    <div class="row justify-content-center">
        <div class="col-xl-12 col-md-10 col-lg-10 wow fadeInRight">
            <div style="margin-top : -10%" class="sign_in_form">
                <h2>Welcome back, sign in</h2>
                <p class="description">Sign in to your account and make recharges. payments and bookings faster</p>
                <form method="post">
                    <div class="row">
                        <div class="col-md-12">
                            <input asp-for="LoginViewModel.Email" type="text" placeholder="Enter your email...">
                        </div>
                        <div class="col-md-12">
                            <input asp-for="LoginViewModel.Password" type="password" placeholder="Enter your password...">
                        </div>
                        <div class="col-md-12">
                            <div class="sign_in_check_area">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                                    <label class="form-check-label" for="flexCheckDefault">
                                        Remember me
                                    </label>
                                </div>
                                <a asp-page="/ForgotPassword">Forget Password?</a>
                            </div>
                        </div>
                        <div class="col-12">
                            <button class="common_btn" type="submit">sign in</button>
                        </div>
                    </div>
                </form>
                <p class="or">or</p>
                <ul>
                    <li>
                        <a href="#">
                            <span>
                                <img src="assetsClient/images/google_icon.svg" alt="google" class="img-fluid w-100">
                            </span>
                            Google
                        </a>
                    </li>
                    <li>
                        <a href="#">
                            <span>
                                <img src="assetsClient/images/fb_icon.svg" alt="facebook" class="img-fluid w-100">
                            </span>
                            facebook
                        </a>
                    </li>
                </ul>
                <p class="dont_account">Don’t have an account? <a asp-page="/Register">Sign Up</a></p>
            </div>
        </div>
    </div>
</section>

